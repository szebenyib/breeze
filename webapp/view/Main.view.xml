<mvc:View
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:sem="sap.m.semantic"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	controllerName="breeze.controller.Main" displayBlock="true">
	<Page>
		<SplitContainer
			id="splitContainer">
			<masterPages>
				<Page
					id="masterPage"
					title="{i18n>MainTitle}">
					<headerContent>
					</headerContent>
					<content>
						<List
							change="onSelectionChange"
							items="{
								path: 'ACDevicesModel>/'
							}">
							<DisplayListItem
								label="{ACDevicesModel>location}"
								value="{ACDevicesModel>id}"
								type="Navigation"
								press="onDevicePressed"/>
						</List>
					</content>
				</Page>
			</masterPages>
			<detailPages>
				<Page
					id="detailPage"
					title="{i18n>DetailPageTitle}"
					showNavButton="true"
					navButtonPress="onNavButtonPressed">
					<Label

						text="{SelDevModel>/id}" />
				</Page>
			</detailPages>
		</SplitContainer>
	</Page>
</mvc:View>
