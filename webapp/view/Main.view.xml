<mvc:View
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	controllerName="breeze.controller.Main" displayBlock="true">
	<Page
		id="page"
		title="{i18n>Title}">
		<SplitContainer
			id="splitContainer">
			<masterPages>
				<Page
					id="masterPage"
					title="{i18n>Devices}">
					<headerContent>
					</headerContent>
					<content>
						<List
							id="deviceList"
							selectionChange="onSelectionChange"
							mode="SingleSelectMaster"
							items="{
								path: 'ACDevicesModel>/'
							}">
							<DisplayListItem
								label="{ACDevicesModel>location}"
								value="{ACDevicesModel>id}"
								type="Navigation"/>
						</List>
					</content>
				</Page>
			</masterPages>
			<detailPages>
				<Page
					id="detailPage"
					title="{SelDevModel>/location}"
					showNavButton="true"
					navButtonPress="onNavButtonPressed">
					<l:Grid
						defaultIndent="L3 M2 S0"
						defaultSpan="L6 M8 S12">
						<Label
							text="{i18n>LastCommandSent}" />
						<l:HorizontalLayout>
							<l:VerticalLayout>
								<core:Icon
									src="sap-icon://log"
									class="lastCommandIcon" />
								<CheckBox
									id="lastOnOff"
									selected="{SelDevModel>/lastCommand/on}"/>
							</l:VerticalLayout>
							<l:VerticalLayout>
								<core:Icon
									src="sap-icon://temperature"
									class="lastCommandIcon" />
								<Label
									id="lastTemperature"
									text="{SelDevModel>/lastCommand/temperature}"
									class="lastCommandLabel" />
							</l:VerticalLayout>
							<l:VerticalLayout>
								<core:Icon
									src="sap-icon://settings"
									class="lastCommandIcon" />
								<Label
									id="lastMode"
									text="{SelDevModel>/lastCommand/mode}"
									class="lastCommandLabel" />
							</l:VerticalLayout>
							<l:VerticalLayout>
								<core:Icon
									src="sap-icon://performance"
									class="lastCommandIcon" />
								<Label
									id="lastFan"
									text="{SelDevModel>/lastCommand/fan}"
									class="lastCommandLabel" />
							</l:VerticalLayout>
							<l:VerticalLayout>
								<core:Icon
									src="sap-icon://globe"
									class="lastCommandIcon" />
								<CheckBox
									id="lastEco"
									selected="{SelDevModel>/lastCommand/eco}" />
							</l:VerticalLayout>
							<l:VerticalLayout>
								<core:Icon
									src="sap-icon://step"
									class="lastCommandIcon" />
								<CheckBox
									id="lastPowerful"
									selected="{SelDevModel>/lastCommand/powerful}" />
							</l:VerticalLayout>
							<l:VerticalLayout>
								<core:Icon
									src="sap-icon://sort"
									class="lastCommandIcon" />
								<CheckBox
									id="lastVane"
									selected="{SelDevModel>/lastCommand/stepVane}" />
							</l:VerticalLayout>
							<l:VerticalLayout>
								<core:Icon
									src="sap-icon://repost"
									class="lastCommandIcon" />
								<CheckBox
									id="lastSwing"
									selected="{SelDevModel>/lastCommand/swing}" />
							</l:VerticalLayout>
						</l:HorizontalLayout>
					</l:Grid>
					<l:Grid
						defaultIndent="L3 M2 S0"
						defaultSpan="L3 M4 S3">
						<Label
							text="{i18n>NewCommandToBeSent}" />
						<StepInput
							value="{SelDevModel>/newCommand/temperature}"
							min="{SelDevModel>/minTemperature}"
							max="{SelDevModel>/maxTemperature}"
							step="1">
							<layoutData>
								<l:GridData
									indent="L5 M4 S0"
									span="L2 M4 S12" />
							</layoutData>
						</StepInput>
						<SegmentedButton
							id="mode"
							selectedKey="{SelDevModel>/newCommand/mode}"
							width="100%"
							class="segmentedButton">
							<layoutData>
								<l:GridData
									span="L6 M8 S12" />
							</layoutData>
							<items>
								<SegmentedButtonItem
									text="{i18n>Auto}"
									key="auto" />
								<SegmentedButtonItem
									text="{i18n>Cool}"
									key="cool" />
								<SegmentedButtonItem
									text="{i18n>Dry}"
									key="dry" />
								<SegmentedButtonItem
									text="{i18n>Fan}"
									key="fan" />
								<SegmentedButtonItem
									text="{i18n>Heat}"
									key="heat" />
							</items>
						</SegmentedButton>
						<SegmentedButton
							id="fan"
							selectedKey="{SelDevModel>/newCommand/fan}"
							width="100%"
							class="segmentedButton">
							<layoutData>
								<l:GridData
									span="L6 M8 S12" />
							</layoutData>
							<items>
								<SegmentedButtonItem
									text="{i18n>Auto}"
									key="auto" />
								<SegmentedButtonItem
									text="{i18n>High}"
									key="high" />
								<SegmentedButtonItem
									text="{i18n>Med}"
									key="med" />
								<SegmentedButtonItem
									text="{i18n>Low}"
									key="low" />
								<SegmentedButtonItem
									text="{i18n>Quiet}"
									key="quiet" />
							</items>
						</SegmentedButton>
						<Label
							text="{i18n>Powerful}"
							labelFor="powerful" >
							<layoutData>
								<l:GridData
									span="L1 M3 S3" />
							</layoutData>
						</Label>
						<Switch
							id="powerful"
							state="{SelDevModel>/newCommand/powerful}">
							<layoutData>
								<l:GridData
									indent="L0 M0 S0"
									span="L3 M3 S3" />
							</layoutData>
						</Switch>
						<Label
							text="{i18n>Economy}"
							labelFor="economy" >
							<layoutData>
								<l:GridData
									linebreakL="true"
									linebreakM="true"
									span="L1 M3 S3" />
							</layoutData>
						</Label>
						<Switch
							id="economy"
							state="{SelDevModel>/newCommand/economy}">
							<layoutData>
								<l:GridData
									indent="L0 M0 S0"
									span="L3 M3 S3" />
							</layoutData>
						</Switch>
						<ToggleButton
							id="stepVane"
							text="{i18n>StepVane}"
							pressed="{SelDevModel>/newCommand/stepVane}"
							class="toggleButton">
							<layoutData>
								<l:GridData
									span="L3 M4 S6" />
							</layoutData>
						</ToggleButton>
						<ToggleButton
							id="swing"
							text="{i18n>Swing}"
							pressed="{SelDevModel>/newCommand/swing}"
							class="toggleButton">
							<layoutData>
								<l:GridData
									indent="L0 M0 S0"
									span="L3 M4 S6" />
							</layoutData>
						</ToggleButton>
					</l:Grid>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer />
							<Button
								text="{i18n>TurnOff}"
								type="Reject"
								press="onTurnOffButtonPressed"
								class="turnOffButton"/>
							<Button
								text="{i18n>TurnOnAndSend}"
								type="Accept"
								press="onTurnOnAndSendButtonPressed"
								class="sendCommandButton"/>
					</OverflowToolbar>
				</footer>
				</Page>
			</detailPages>
		</SplitContainer>
	</Page>
</mvc:View>
